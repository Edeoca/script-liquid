<style>

  .treeview a {
    display: block;
    position: relative;
    left: 0;
    color:666;
    padding-left: 8px;
    border-left: solid 4px transparent;
    -webkit-transition: border 200ms ease-out;
    -moz-transition: border 200ms ease-out;
    -o-transition: border 200ms ease-out;
  }
 
  .treeview li a{
  color: #666;
    padding: 4px;
    font-size:11px;
    border:1px solid #ddd;
      
  }
  
 .treeview li a:hover{
  background:#8cc43c;
      
  }
  .treeview li a.active{
  color: #fff;
  width:100%;
  background: #8cc43c;
    
  }

  .apolo{
  background: none;
  border-bottom: 1px solid #8cc43c;
  padding: 8px 0px;
  }
	
  
</style>



<script>
jQuery(function($) {
  var stay = '{{collection.url}}';
     var newpath = window.location.pathname; 
     $('.treeview ul').each(function() {
      if (newpath.toLowerCase() == stay) {
       $(this).hide(); 
      }
     });
     });

</script>

<script>
jQuery(function($) {
     var path = window.location.href; 
     $('.treeview li a').each(function() {
      if (this.href === path) {
       $(this).addClass('active'); 
      }
     });
});


</script>



































